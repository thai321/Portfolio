<h1>Portfolio Angular Items</h1>

<%= link_to "Create New Item", new_portfoli_path if logged_in?(:site_admin) %>
							<!-- /portfolis/new -->


<% @angular_portfolio_items.each do |portfolio_item| %>
	<p><%= link_to portfolio_item.title, portfoli_show_path(portfolio_item) %></p>
	<p><%= portfolio_item.subtitle %></p>
	<p><%= portfolio_item.body %></p>
	<%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %>
	<%= link_to "Edit", edit_portfoli_path(portfolio_item) %>
	<%= link_to 'Delete Portfolio Item', portfoli_show_path(portfolio_item), method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>